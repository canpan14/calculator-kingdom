<div class="playingCard card col-4 p-1" data-id="{{id}}" data-cost="{{cost}}" style="background-color: {{backColor}}; height: 125px;">
  <div class="card-body d-flex flex-column p-1">
    <h4 class="card-title">{{cost}}</h4>
    <div class="card-text text-center m-0" style="background-color: #dddddd">{{name}}</div>
    <div class="card-text text-center mt-auto"><i class="fa fa-bolt" aria-hidden="true"></i>{{attack}} <i class="fa fa-shield" aria-hidden="true"></i>{{defense}}</div>
  </div>
</div>
