<div class="container-fluid" style="min-width: 400px; max-width: 700px">
  <div class="row mb-1">
    <div id="playerField" class="card col-6 p-1">
      <div class="card-body p-1">
        <h4 class="card-title">Player</h4>
        <h6 class="card-text m-0">Health</h6>
        <h6 class="card-text m-0">Attack</h6>
        <div id="playerAttackCards" class="miniCardHolder"></div>
        <h6 class="card-text m-0">Defense</h6>
        <div id="playerDefenseCards" class="miniCardHolder"></div>
        <h6 class="card-text m-0">Recently Played</h6>
        <div id="playerRecentlyPlayedCards" class="miniCardHolder"></div>
      </div>
    </div>

    <div id="enemyField" class="card col-6 p-1">
      <div class="card-body p-1">
        <h4 class="card-title">Enemy</h4>
        <h6 class="card-text m-0">Health</h6>
        <h6 class="card-text m-0">Attack</h6>
        <div id="enemyAttackCards" class="miniCardHolder"></div>
        <h6 class="card-text m-0">Defense</h6>
        <div id="enemyDefenseCards" class="miniCardHolder"></div>
        <h6 class="card-text m-0">Recently Played</h6>
        <div id="enemyRecentlyPlayedCards" class="miniCardHolder"></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-sm-6 mb-2 bm-mb-0">
      <div id="cardHolder" class="row" style="min-width: 200px; min-height: 200px; border: solid black 1px;">
      </div>
    </div>

    <div class="col-12 col-sm-6">
      <div class="row">
        <div class="btn-group col-12 mb-2">
          <button type="button" class="operation btn btn-primary col-3">+</button>
          <button type="button" class="operation btn btn-primary col-3">-</button>
          <button type="button" class="operation btn btn-primary col-3">X</button>
          <button type="button" class="reset-calc btn btn-primary col-3">C</button>
        </div>
      </div>
      <div class="row">
        <div class="btn-group col-12">
          <button id='calc-1' type="button" class="number btn btn-info col-4"></button>
          <button id='calc-2' type="button" class="number btn btn-info col-4"></button>
          <button id='calc-3' type="button" class="number btn btn-info col-4"></button>
        </div>
      </div>
      <div class="row">
        <div class="btn-group col-12">
          <button id='calc-4' type="button" class="number btn btn-info col-4"></button>
          <button id='calc-5' type="button" class="number btn btn-info col-4"></button>
          <button id='calc-6' type="button" class="number btn btn-info col-4"></button>
        </div>
      </div>
      <div class="row">
        <div class="btn-group col-12">
          <button id='calc-7' type="button" class="number btn btn-info col-4"></button>
          <button id='calc-8' type="button" class="number btn btn-info col-4"></button>
          <button id='calc-9' type="button" class="number btn btn-info col-4"></button>
        </div>
      </div>
    </div>
  </div>
</div>
